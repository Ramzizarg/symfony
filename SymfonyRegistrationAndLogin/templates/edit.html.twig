{# templates/edit.html.twig #}

{% extends 'backutilisateur.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="content">
        <div class="page-header">
            <h1 class="page-title">Edit User Role</h1>
            <div class="page-options">
                {{ form_start(form) }}

                {# Assuming roles is a choice type in your form #}
                <div class="form-group">
                    {{ form_label(form.roles, 'User Roles', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="{{ path('user_list') }}" class="btn btn-secondary">Back to User List</a>

                {{ form_end(form) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {# Add other form fields here if needed #}
            </div>
        </div>
    </div>
{% endblock %}
