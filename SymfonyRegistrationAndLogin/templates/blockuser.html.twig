{% extends 'base.html.twig' %}

{% block title %}Blocked User{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Arial', sans-serif;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 400px;
            background-color: #fff;
            text-align: center;
            padding: 20px;
        }

        h1 {
            color: #1877f2;
            font-size: 25px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        p {
            font-size: 16px;
            color: #333;
        }

        button {
            background-color: #1877f2;
            border: none;
            border-radius: 5px;
            padding: 14px;
            width: 100%;
            font-size: 18px;
            font-weight: bold;
            color: #fff;
            transition: background-color 0.3s;
            cursor: pointer;
        }

        button:hover {
            background-color: #11569f;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card">
        <h1>User Blocked</h1>
        <p>Sorry, but your account is blocked. Please contact us.</p>

        <!-- Add the "Return to Login" button -->
        <a href="{{ path('app_logout') }}">
            <button type="button">Return</button>
        </a>
    </div>
{% endblock %}
