{% extends 'base.html.twig' %}

{% block title %}Login to Escooter{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Arial', sans-serif;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 400px;
            background-color: #fff;

        }

        .card-body {
            padding: 70px;
            text-align: center;
        }

        .form-signin {
            text-align: left;
        }

        h1 {
            color: #1877f2;
            font-size: 25px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            font-size: 14px;
            color: #333;
        }

        .form-control {
            border: 1px solid #e8dfdf;
            border-radius: 5px;
            margin-bottom: 15px;
            padding: 12px; /* Increased padding */
            width: calc(100% - 24px); /* Adjusted width */
            font-size: 16px;
            color: #333;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .form-control:focus {
            border-color: #1877f2;
            box-shadow: 0 0 0 0.2rem rgba(24, 119, 242, 0.25);
        }

        .btn-primary {
            background-color: #1877f2;
            border: none;
            border-radius: 5px;
            padding: 14px; /* Increased padding */
            width: 100%;
            font-size: 18px;
            font-weight: bold;
            color: #fff;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #11569f;
        }

        .alert-danger {
            border-radius: 5px;
            background-color: #f8d7da; /* Light red for danger alert */
            color: #721c24; /* Dark red text for danger alert */
            border-color: #f5c6cb; /* Border color for danger alert */
        }

        .text-muted {
            color: #6c757d;
            font-size: 15px;
            margin-top: 20px;
        }

        .forgot-password {
            font-size: 14px;
            color: #1877f2;
            text-decoration: none;
        }

        .logo {
            max-width: 100%;
            height: 100px;
            margin-bottom: 5px;


        }

    </style>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <img src="{{ asset('image/logo.png') }}" alt="logo" class="logo">
            <form method="post" class="form-signin">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Login to Escooter</h1>

                <label for="inputEmail">Email</label>
                <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" autocomplete="email" required autofocus>

                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary" type="submit">
                    Login
                </button>

                <p class="mt-3"><a href="{{ path('app_forgot_password_request') }}" class="forgot-password">Forgot your password?</a></p>
            </form>

            <p>Don't have an account? <a href="{{ path('app_register') }}" class="text-muted">Signup</a></p>
        </div>
    </div>
{% endblock %}
