{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Arial', sans-serif;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 400px;
            background-color: #fff;
        }

        .card-body {
            padding: 70px;
            text-align: center;
        }

        .form-signin {
            text-align: left;
        }

        h1 {
            color: #1877f2;
            font-size: 28px;
            font-weight: bold;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            font-size: 14px;
            color: #333;
        }

        .form-control {
            border: 1px solid #dfe3e8;
            border-radius: 5px;
            margin-bottom: 7px;
            padding: 7px;
            width: calc(100% - 20px); /* Adjusted width */
            font-size: 15px;
            color: #333;
        }

        .form-control:focus {
            border-color: #1877f2; /* Focus color */
            box-shadow: 0 0 0 0.2rem rgba(24, 119, 242, 0.25);
        }

        .btn-primary {
            background-color: #1877f2;
            border: none;
            border-radius: 5px;
            padding: 12px;
            width: 100%;
            font-size: 18px;
            font-weight: bold;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #11569f; /* Darker shade for hover */
        }

        .alert-danger {
            border-radius: 5px;
            background-color: #f8d7da; /* Light red for danger alert */
            color: #721c24; /* Dark red text for danger alert */
            border-color: #f5c6cb; /* Border color for danger alert */
        }

        .text-muted {
            color: #6c757d;
            font-size: 14px;
        }

        .forgot-password {
            font-size: 14px;
            color: #1877f2;
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <h1>Register</h1>

            {{ form_start(registrationForm, {'attr': {'class': 'form-signin'}}) }}
            {{ form_row(registrationForm.nom, {'label': 'Nom', 'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
            {{ form_row(registrationForm.prenom, {'label': 'Prenom', 'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
            {{ form_row(registrationForm.cin, {'label': 'National ID (CIN)', 'attr': {'class': 'form-control', 'placeholder': 'National ID (CIN)'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Password',
                'attr': {'class': 'form-control', 'placeholder': 'Password'}
            }) }}
            <div class="form-group form-check">
                {{ form_row(registrationForm.agreeTerms, {'label': 'I agree to the terms', 'attr': {'class': 'form-check-input'}}) }}
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
            {{ form_end(registrationForm) }}

            <p>Already have an account? <a href="{{ path('app_login') }}" class="text-muted">Login here</a></p>
        </div>
    </div>
{% endblock %}
