{% extends 'base.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Arial', sans-serif;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 400px;
            background-color: #fff;
        }

        .card-body {
            padding: 70px;
            text-align: center;
        }

        h1 {
            color: #1877f2;
            font-size: 25px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border: 1px solid #e8dfdf;
            border-radius: 5px;
            margin-bottom: 15px;
            padding: 12px;
            width: calc(100% - 24px);
            font-size: 16px;
            color: #333;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .form-control:focus {
            border-color: #1877f2;
            box-shadow: 0 0 0 0.2rem rgba(24, 119, 242, 0.25);
        }

        .btn-primary {
            background-color: #1877f2;
            border: none;
            border-radius: 5px;
            padding: 14px;
            width: 100%;
            font-size: 18px;
            font-weight: bold;
            color: #fff;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #11569f;
        }

        .text-muted {
            color: #6c757d;
            font-size: 15px;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="h3 mb-3 font-weight-normal">Reset Your Password</h1>

            {{ form_start(resetForm) }}
            <div class="form-group">
                {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter your new password'}}) }}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Reset Password</button>
            </div>
            {{ form_end(resetForm) }}

            <p class="text-muted">Remember your password? <a href="{{ path('app_login') }}">Login here</a></p>
        </div>
    </div>
{% endblock %}
